<h1>Edit Goal</h1>

<form action="<%= goal_url(@goal) %>" method="post" accept-charset="utf-8">
	<input type="hidden" name="_method" value="put">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" id="authenticity_token">

	<input type="text" name="goal[name]" value="<%= @goal.name %>" id="goal_name">

	<p><input type="submit" value="Submit"></p>
</form>